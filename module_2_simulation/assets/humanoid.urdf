<?xml version="1.0"?>
<robot name="simple_humanoid">

  <!-- Base link (invisible root) -->
  <link name="base_link">
    <visual>
      <geometry>
        <sphere radius="0.01"/> <!-- tiny placeholder -->
      </geometry>
      <material name="invisible">
        <color rgba="0 0 0 0"/> <!-- fully transparent -->
      </material>
    </visual>
  </link>

  <!-- Fixed joint connecting base_link to torso -->
  <joint name="base_to_torso" type="fixed">
    <parent link="base_link"/>
    <child link="torso"/>
    <origin xyz="0 0 0.6"/> <!-- lifts torso 0.6m above ground -->
  </joint>

  <!-- Torso -->
  <link name="torso">
    <inertial>
      <origin xyz="0 0 0" />
      <mass value="10"/>
      <inertia ixx="0.1" iyy="0.1" izz="0.1"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.3" rpy="0 0 0"/>
      <geometry>
        <box size="0.4 0.2 0.6"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
  </link>

  <!-- Head -->
  <link name="head">
    <visual>
      <origin xyz="0 0 0.1"/>
      <geometry>
        <sphere radius="0.1"/>
      </geometry>
      <material name="skin">
        <color rgba="1 0.8 0.6 1"/>
      </material>
    </visual>
  </link>

  <!-- Neck joint connects torso and head -->
  <joint name="neck" type="revolute">
    <parent link="torso"/>
    <child link="head"/>
    <origin xyz="0 0 0.6"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.0" upper="1.0" effort="5" velocity="1.0"/>
  </joint>

  <!-- Right Arm -->
  <link name="right_upper_arm">
    <visual>
      <origin xyz="0 0 -0.15"/>
      <geometry><cylinder radius="0.05" length="0.3"/></geometry>
      <material name="gray"><color rgba="0.7 0.7 0.7 1"/></material>
    </visual>
  </link>
  <joint name="right_shoulder" type="revolute">
    <parent link="torso"/>
    <child link="right_upper_arm"/>
    <origin xyz="-0.25 0 0.45"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.5" upper="1.5" effort="15" velocity="1.0"/>
  </joint>

  <link name="right_lower_arm">
    <visual>
      <origin xyz="0 0 -0.125"/>
      <geometry><cylinder radius="0.04" length="0.25"/></geometry>
      <material name="gray"/>
    </visual>
  </link>
  <joint name="right_elbow" type="revolute">
    <parent link="right_upper_arm"/>
    <child link="right_lower_arm"/>
    <origin xyz="0 0 -0.3"/>
    <axis xyz="0 1 0"/>
    <limit lower="0" upper="1.5" effort="10" velocity="1.0"/>
  </joint>

  <!-- Left Arm -->
  <link name="left_upper_arm">
    <visual>
      <origin xyz="0 0 -0.15"/>
      <geometry><cylinder radius="0.05" length="0.3"/></geometry>
    </visual>
  </link>
  <joint name="left_shoulder" type="revolute">
    <parent link="torso"/>
    <child link="left_upper_arm"/>
    <origin xyz="0.25 0 0.45"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.5" upper="1.5" effort="15" velocity="1.0"/>
  </joint>

  <link name="left_lower_arm">
    <visual>
      <origin xyz="0 0 -0.125"/>
      <geometry><cylinder radius="0.04" length="0.25"/></geometry>
    </visual>
  </link>
  <joint name="left_elbow" type="revolute">
    <parent link="left_upper_arm"/>
    <child link="left_lower_arm"/>
    <origin xyz="0 0 -0.3"/>
    <axis xyz="0 1 0"/>
    <limit lower="0" upper="1.5" effort="10" velocity="1.0"/>
  </joint>

  <!-- Right Leg -->
  <link name="right_thigh">
    <visual>
      <origin xyz="0 0 -0.2"/>
      <geometry><cylinder radius="0.06" length="0.4"/></geometry>
    </visual>
  </link>
  <joint name="right_hip" type="revolute">
    <parent link="torso"/>
    <child link="right_thigh"/>
    <origin xyz="-0.1 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-1.0" upper="1.0" effort="20" velocity="1.0"/>
  </joint>

  <link name="right_shin">
    <visual>
      <origin xyz="0 0 -0.2"/>
      <geometry><cylinder radius="0.05" length="0.4"/></geometry>
    </visual>
  </link>
  <joint name="right_knee" type="revolute">
    <parent link="right_thigh"/>
    <child link="right_shin"/>
    <origin xyz="0 0 -0.4"/>
    <axis xyz="1 0 0"/>
    <limit lower="0" upper="1.5" effort="20" velocity="1.0"/>
  </joint>

  <!-- Left Leg -->
  <link name="left_thigh">
    <visual>
      <origin xyz="0 0 -0.2"/>
      <geometry><cylinder radius="0.06" length="0.4"/></geometry>
    </visual>
  </link>
  <joint name="left_hip" type="revolute">
    <parent link="torso"/>
    <child link="left_thigh"/>
    <origin xyz="0.1 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-1.0" upper="1.0" effort="20" velocity="1.0"/>
  </joint>

  <link name="left_shin">
    <visual>
      <origin xyz="0 0 -0.2"/>
      <geometry><cylinder radius="0.05" length="0.4"/></geometry>
    </visual>
  </link>
  <joint name="left_knee" type="revolute">
    <parent link="left_thigh"/>
    <child link="left_shin"/>
    <origin xyz="0 0 -0.4"/>
    <axis xyz="1 0 0"/>
    <limit lower="0" upper="1.5" effort="20" velocity="1.0"/>
  </joint>

</robot>
